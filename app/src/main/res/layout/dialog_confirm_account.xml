<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="412dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/confirm_account"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_title" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:contentDescription="@string/close"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_close_gray" />
    </LinearLayout>

    <View style="@style/div_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/user_name"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:text="*刚"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <View
        style="@style/div_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/pay_cost_company"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:id="@+id/pay_cost_company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:text="新奥燃气"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <View
        style="@style/div_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/pay_account"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:text="A9331659000"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <View
        style="@style/div_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/address_msg"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:text="北京市朝阳区十里堡****单元**2室"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <View
        style="@style/div_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/account_balance"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:text="0.00元"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <View
        style="@style/div_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/confirm"
            android:layout_width="275dp"
            android:layout_height="46dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_stroke_bg_blue"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_btn"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>