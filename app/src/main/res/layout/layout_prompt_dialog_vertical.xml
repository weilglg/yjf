<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_solid_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_hint_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="13dp"
                android:text="设置头像"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_hint_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="是否删除该记录？"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/dialog_hint_affirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_affirm_btn_selector"
            android:gravity="center"
            android:padding="15dp"
            android:text="确认"
            android:textColor="@color/text_blue_color"
            android:textSize="17sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/dialog_hint_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_cancel_btn_selector"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="@color/text_blue_color"
        android:textSize="17sp" />
</LinearLayout>