<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_solid_white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_hint_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="设置头像"
            android:textColor="@color/text_color"
            android:textSize="17sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/dialog_hint_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="是否删除该记录？"
        android:textColor="@color/text_color"
        android:textSize="13sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_hint_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_blue_color"
            android:textSize="17sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/dialog_hint_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/text_blue_color"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>