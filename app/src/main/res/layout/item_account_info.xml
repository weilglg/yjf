<?xml version="1.0" encoding="utf-8"?>
<com.cn.lib.widget.shadowlayout.ShadowLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="20dp"
    app:l_radius="5dp"
    app:l_shadowAlpha="0.2"
    app:l_shadowElevation="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*刚"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/device_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:text="A9441659000"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="北京市朝阳区十里堡****单元**2室"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/recharge"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_stroke_bg_blue"
        android:gravity="center"
        android:text="@string/recharge"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</com.cn.lib.widget.shadowlayout.ShadowLinearLayout>