<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SideBarView">
        <attr name="sideGravity" format="enum">
            <enum name="start" value="1" />
            <enum name="end" value="0" />
        </attr>
        <attr name="sideTextSize" format="dimension" />
        <attr name="sideTextColor" format="color" />
        <attr name="sideBarWidth" format="dimension" />

        <attr name="sidePreviewSize" format="dimension" />
        <attr name="sidePreviewRadius" format="dimension" />

        <attr name="sidePreviewTextSize" format="dimension" />
        <attr name="sidePreviewTextColor" format="color" />
        <attr name="sidePreviewBackgroundColor" format="color" />
    </declare-styleable>
</resources>
